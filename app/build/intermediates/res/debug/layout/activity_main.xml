<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/splash"
    tools:context=".MainActivity" >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:onClick="pegafour"
        android:src="@drawable/powered_by_google_light"
        />


    <TextView
        android:text="@string/locationfind"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_above="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="ListaClick"
        android:textStyle="bold"
        android:background="@drawable/botao01"
        android:textColor="#FFFFFF"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text=""
        android:layout_marginBottom="36dp"
        android:layout_above="@+id/edit_local"/>

    <TextView android:text="@string/searchanother"
        android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"

        android:layout_above="@+id/edit_local"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="6dp" />

    <EditText
        android:id="@+id/edit_local"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="ex: paris, fr"
        android:inputType="text"
        android:ems="10"
        android:layout_alignParentBottom="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/search"
        android:clickable="true"
        android:onClick="otherlocClick"
        android:layout_marginBottom="6dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />




</RelativeLayout>
